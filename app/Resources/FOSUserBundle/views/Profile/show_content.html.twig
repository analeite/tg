{% trans_default_domain 'FOSUserBundle' %}

<section class="content-header">
    <h1>
        {{ 'user.user_profile'|trans }}
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>{{ 'user.menu_profile'|trans }}</a></li>
        {#<li><a href="#">Profile</a></li>
        <li class="active">User profile</li>#}
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <div class="row">
        <div class="col-md-3">

            <!-- Profile Image -->
            <div class="box box-primary">
                <div class="box-body box-profile">
                    <img class="profile-user-img img-responsive img-circle" src="/assets/vendor/AdminLTE/dist/img/user4-128x128.jpg" alt="User profile picture">

                    <h3 class="profile-username text-center">{{ user.username }}</h3>

                    <p class="text-muted text-center">Software Engineer</p>

                    <ul class="list-group list-group-unbordered">
                        <li class="list-group-item">
                            <b>{{ 'profile.show.name'|trans }}</b> <a class="pull-right">{{ user.usernamecanonical }}</a>
                        </li>
                        <li class="list-group-item">
                            <b>{{ 'profile.show.email'|trans }}</b> <a class="pull-right">{{ user.email }}</a>
                        </li>
                        <li class="list-group-item">
                            <b>{{ 'profile.show.lastlogin'|trans }}</b> <a class="pull-right">{{ user.lastlogin|date('d/m/Y H:i:s') }}</a>
                        </li>
                    </ul>

                    <a href="#" class="btn btn-primary btn-block"><b>Follow</b></a>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>

